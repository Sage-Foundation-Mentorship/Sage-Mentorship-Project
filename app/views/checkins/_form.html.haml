= form_for @checkin do |f|
  - if @checkin.errors.any?
    #error_explanation
      %h2= "#{pluralize(@checkin.errors.count, "error")} prohibited this checkin from being saved:"
      %ul
        - @checkin.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :checkin_time
    = f.datetime_select :checkin_time
  .field
    = f.label :latitude
    = f.text_field :checkin_lat
  .field
    = f.label :longitude
    = f.text_field :checkin_lon
  .field
    = f.label :mentor_id
    = f.collection_select :mentor_id, Mentor.all, :id, :name, prompt: "Select Mentor"
  .field
    = f.label :school_id
    = f.collection_select :school_id, School.all, :id, :name, prompt: "Select School"
  .field
    = f.label :isValid
    = f.check_box :isValid
  .actions
    = f.submit 'Save'
