<!DOCTYPE html>
<html>
<head>
  <meta name="google-signin-client_id" content="874482834971-lqadmntua28ak3td8hkktbgphjheitnu.apps.googleusercontent.com">
</head>
<body>
<img src="/sage_logo.jpg">
<div id="my-signin2"><</div>
<script>
  function onSuccess(googleUser) {
      console.log('Logged in as: ' + googleUser.getBasicProfile().getEmail());
  }
  function onFailure(error) {
      console.log(error);
  }
  function renderButton() {
      gapi.signin2.render('my-signin2', {
         'prompt': 'select_account',
         'scope': 'email',
         'width': 240,
         'height': 50,
         'longtitle': true,
         'theme': 'dark',
         'onSuccess': onSuccess,
         'onFailure': onFailure
      });
  }
</script>
<script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>

<%= yield %>
</body>
</html>
